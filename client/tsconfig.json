{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2019", "es6", "dom", "webworker", "DOM.Iterable"],
    "composite": true,
    "declarationMap": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
